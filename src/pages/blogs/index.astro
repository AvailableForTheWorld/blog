---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../config';

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
			ul li {
				display: flex;
			}
			ul li time {
				flex: 0 0 130px;
				font-style: italic;
				color: #888;
			}
			
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="category">
				<a href="./blogs/basics">基础知识</a>
				<a href='./blogs/interviews'>八股文</a>
				<a href="./blogs/handwritings">手写代码</a>
				<a href="./blogs/engineering">前端工程化</a>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.category {
		display: flex;
		flex-direction: column;
		line-height: 50px;
	}
</style>